<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="cn.lite" level="INFO" additivity="false">
            <appenderRef ref="console" />
        </Logger>

        <Root level="INFO">
            <appenderRef ref="console" />
        </Root>
    </Loggers>
</Configuration>